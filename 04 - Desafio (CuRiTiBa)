package desafiosAula09;

import java.util.Scanner;

public class desafio04 {
      public static void main(String[] args) {
            Scanner scanner = new Scanner(System.in);

            System.out.println("Digite a cidade Curitiba: ");
            String nome = scanner.nextLine();

            if (nome.equalsIgnoreCase("Curitiba")) {
                  System.out.print("Correto, essa cidade é Curitiba!");
          }
            else {
                  System.out.print("Incorreto, essa cidade não é Curitiba!");
          }

            scanner.close();
          }
}
