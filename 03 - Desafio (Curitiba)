package desafiosAula09;

import java.util.Scanner;

public class desafio03{
      public static void main(String[] args) {
            Scanner scanner = new Scanner(System.in);

            System.out.println("Digite exatamente Curitiba: ");
            String nome = scanner.nextLine();

            if (nome.equals("Curitiba")) {
                  System.out.println("Correto, Curitiba!");
            }

            else {
                  System.out.println("Incorreto, não está escrito Curitiba corretamente!");
            }
            scanner.close();
      }
     }
