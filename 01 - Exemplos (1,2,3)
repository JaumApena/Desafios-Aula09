package desafiosAula09;
public class exemplo01{
public static void main(String [] args){

        String orig = "Olá mundo";
        
        String concat = orig + " exem";
        
        String maius = orig.toUpperCase();
        
        System.out.println("String original: " + orig);
        System.out.println("String concatenada: " + concat);
        System.out.println("String maiusculo: " + maius);

System.out.println("String após as alterações: " + original);

          }
}

