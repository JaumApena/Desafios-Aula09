package desafiosAula09;

import java.util.Scanner;

public class exemplo02{
            public static void main(String[] args){
            Scanner scanner = new Scanner(System.in);
            
            String exem = "Exemplo de frase";
            
            char caract1 = exemplo.charAt(0);
            char caract2 = exemplo.charAt(15);
            
            System.out.println("O Primeiro caractere da frase é: " + caract1);
            System.out.println("O Ultimo caractere da frase é: " + caract2);

                         scanner.close();

          }
}

