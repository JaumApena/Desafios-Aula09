package desafiosAula09;
import java.util.Scanner;
public class exemplo03{
public static void main(String[] args){
Scanner scanner = new Scanner(System.in);

String exemplo = "Exemplo de frase";
int caracteresAnteriores = exemplo.indexOf("frase");

System.out.println("Numero de caracteres anteriores: " + caracteresAnteriores);

                            scanner.close();
          }
}

